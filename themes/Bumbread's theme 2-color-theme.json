{
	"name": "Bumbread's theme 2",
	"colors": {
		// Make the main background black af
		"editor.background": "#000000",
		"editor.foreground": "#eeffff",
		// Make the activity bar (icons on the left stripe)
		// black af too
		"activityBar.background": "#000000",
		"activityBarBadge.background": "#000000",
		// The bar at the bottom
		"statusBar.background": "#000000",
		// The explorer window and other windows that appear
		// there
		"sideBar.background": "#000000",
		"sideBarTitle.foreground": "#bbbbbb",
		"list.activeSelectionBackground": "#95A3B3",
		"list.inactiveSelectionBackground": "#95A3B3",
		"list.inactiveSelectionForeground": "#333333",
		// Tabs
		"editorGroupHeader.tabsBackground": "#000000",
		"tab.activeBackground": "#95A3B3",
		"tab.activeForeground": "#333333",
		"gitDecoration.ignoredResourceForeground": "#444444",
		"tab.border": "#00000000",
		"tab.inactiveForeground": "#aaaaaa",
		"tab.inactiveBackground": "#000000",
		// Selections
		"editor.selectionBackground": "#8286B088",
		// Diff colors
		"diffEditor.removedTextBackground": "#00000033",
		"diffEditor.insertedTextBackground": "#00000033",
		"diffEditor.insertedLineBackground": "#6276B5",
		"diffEditor.removedLineBackground": "#DFAE4C80"
	},
	"tokenColors": [
		{
			"name": "Exclusions to default",
			"scope": [
				"storage.type.function.arrow",
			],
			"settings": {
				"foreground": "#ffffff",
			}
		},
		{
			"name": "Comment",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"foreground": "#777777"
			}
		},
		{
			"name": "Strings",
			"scope": [
				"string.quoted",
				"constant.numeric",
				"constant.language",
			],
			"settings": {
				"foreground": "#C5A7C6",
			}
		},
		{
			"name": "Basic Type",
			"scope": [
				"support.type.primitive",
				"storage.type",
				"entity.name.type",
			],
			"settings": {
				"foreground": "#84DCC6",
			}
		},
		{
			"name": "Keyword",
			"scope": [
				"keyword.control",
				"keyword.function",
				"storage.type.function",
				"support.function.builtin",
			],
			"settings": {
				"foreground": "#76BADA",
			}
		}
	]
}
